<BorderPane prefHeight="550.0" prefWidth="900.0" style="-fx-alignment: center" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.downloaderinfo.AddPaneController">
    <center>
        <VBox>
            <HBox>
                <!--add stuff here -->
            </HBox>
            <FlowPane style="-fx-alignment: center; -fx-font-family: 'Montserrat';-fx-spacing: 14; -fx-font-size: 14">
                <Label text="Write your link here:" />
            </FlowPane>
            <FlowPane style="-fx-alignment: center; -fx-font-family: 'Montserrat';-fx-spacing: 12; -fx-font-size: 12">
                <TextArea fx:id="insertTextArea" promptText="ex. Peters_Podcast_der_Geometrie" style="-fx-border-color: BLACK; -fx-border-insets: 0" />
            </FlowPane>
            <FlowPane fx:id="buttons" style="-fx-alignment: center">
                <Button fx:id="downlaodButton" alignment="CENTER" contentDisplay="CENTER" onAction="#downloadNoFileAdd" style=" -fx-alignment: center; -fx-font-family: 'Montserrat';-fx-spacing: 14; -fx-font-size: 14" text="Download from link">
                    <font>
                        <Font name="Bell MT" size="12.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="DEFAULT" />
                    </cursor></Button>
                <Button fx:id="choosePath" onAction="#setFileToDownloadTo" style=" -fx-alignment: center; -fx-font-family: 'Montserrat';-fx-spacing: 14; -fx-font-size: 14" text="choose path" />
                <Button fx:id="downlaodButtonWithAdd" onAction="#downloadWithFileAdd" style=" -fx-alignment: center; -fx-font-family: 'Montserrat';-fx-spacing: 14; -fx-font-size: 14" text="Download from link and add the  file to rss list" />
            </FlowPane>
            <FlowPane prefHeight="200.0" prefWidth="200.0">
                <children>
                    <Label fx:id="chosenPath" alignment="CENTER" contentDisplay="CENTER" prefHeight="20.0" prefWidth="476.0" style="-fx-font-family: 'Montserrat'; -fx-spacing: 14; -fx-font-size: 14; -fx-background-position: 50%;" text="here  will be the chosen path  to your file" />
                    <Label fx:id="recentlyDownloadedFile" alignment="CENTER" contentDisplay="CENTER" prefHeight="20.0" prefWidth="480.0" style="-fx-font-family: 'Montserrat'; -fx-spacing: 14; -fx-font-size: 14;" text="most recently downloaded file will be shown here" wrapText="true" />
                </children>
            </FlowPane>
        </VBox>
    </center>
    <left>
        <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <top>
                <VBox prefHeight="524.0" prefWidth="200.0" styleClass="sideBarLeft" BorderPane.alignment="CENTER">
                    <children>
                        <VBox>
                            <children>
                                <ImageView fitHeight="127.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@logo_temp2.png" />
                                    </image>
                                </ImageView>
                                <Label prefHeight="29.0" prefWidth="201.0" text="Currently playing: Lorem Ipsum" />
                                <HBox prefHeight="29.0" prefWidth="201.0">
                                    <children>
                                        <Button mnemonicParsing="false" prefHeight="29.0" prefWidth="69.0" text="prev" />
                                        <Button mnemonicParsing="false" prefHeight="29.0" prefWidth="69.0" text="stop/start" />
                                        <Button mnemonicParsing="false" prefHeight="29.0" prefWidth="69.0" text="next" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                    <padding>
                    </padding>
                </VBox>
            </top></BorderPane>
    </left>
    <top>
        <HBox prefHeight="81.0" prefWidth="890.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="90.0" prefWidth="978.0" styleClass="header" stylesheets="@mainStyles.css">
                    <children>
                        <ImageView fitHeight="34.0" fitWidth="34.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true" styleClass="header">
                            <image>
                                <Image url="@house_mm.png" />
                            </image></ImageView>
                        <Button alignment="BASELINE_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" prefHeight="76.0" prefWidth="100.0" styleClass="btn-selected" stylesheets="@mainStyles.css" text="Menu" textAlignment="CENTER">
                            <effect>
                                <Blend />
                            </effect></Button>
                        <ImageView fitHeight="34.0" fitWidth="34.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@cog_settings.png" />
                            </image></ImageView>
                        <Button alignment="BASELINE_LEFT" mnemonicParsing="false" prefHeight="71.0" prefWidth="94.0" stylesheets="@mainStyles.css" text="Settings" />
                        <ImageView fitHeight="78.0" fitWidth="78.0" layoutX="10.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true" />
                        <Button alignment="BASELINE_LEFT" mnemonicParsing="false" prefHeight="70.0" prefWidth="155.0" stylesheets="@mainStyles.css" text="your podcast" />
                        <ImageView fitHeight="78.0" fitWidth="78.0" layoutX="419.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true" />
                        <Button alignment="BASELINE_LEFT" layoutX="469.0" layoutY="10.0" maxWidth="-Infinity" mnemonicParsing="false" prefHeight="68.0" prefWidth="10.0" stylesheets="@mainStyles.css" text="browse " />
                    </children>
                </HBox>
            </children>
        </HBox>
    </top>
</BorderPane>
